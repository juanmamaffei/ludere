.full-height.row.middle-xs.center-xs.card.z-depth-3.main-background
  %div{:class => "col s 12 m 6 offset-m2 center"}
  
    %h2.center
      = t('.sign_in', :default => "Sign in")

    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      = f.label :email, :id => "email"
      = f.email_field :email , :class => "input_field"

      = f.label :password 
      = f.password_field :password 

      -if devise_mapping.rememberable? 
        = f.check_box :remember_me 
        = f.label :remember_me 

      .p.center
        = f.submit t('.sign_in', :default => "Sign in"), :class => "btn"
   
    = render "devise/shared/links"